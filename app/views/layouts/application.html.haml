!!!
%html

  %head
    %title
      = yield(:title) || "Untitled"
    %meta{"http-equiv"=>"Content-Type", :content=>"text/html; charset=utf-8"}
    = stylesheet_link_tag "/stylesheets/base.css", "/stylesheets/skeleton.css", "/stylesheets/screen.css", "http://fonts.googleapis.com/css?family=Fredoka+One"
    = javascript_include_tag :defaults
    = csrf_meta_tag
    = yield(:head)

  %body{:id => bodyid, :class => bodyclass}
    %header.main
      .container
        %h1#logo
          = link_to 'Tia Botas - Samsung SmartTV', videos_path
    = render 'layouts/menu' 
        
    #container
      %p#notice= notice
      - flash.each do |name, msg|
        = content_tag :div, msg, :id => "flash_#{name}"

      - if show_title?
        %h1= yield(:title)

      = yield


