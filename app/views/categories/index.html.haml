#content.container
  .block.width-1020.behavior-table
    %h6.title Listando categorías
    .table-head
      %ul
        %li.nombre Nombre
      .table-body
        - @categories.each do |category|
          %ul
            %li.nombre= link_to category.name, category
            %li.links
              = link_to 'Editar', edit_category_path(category), :class => 'btn edit'
              = link_to 'Eliminar', category, :confirm => '¿Estás seguro?', :method => :delete, :class => 'btn destroy'
    .table-footer
      = link_to 'Nueva Categoría', new_category_path, :class => 'link'
      = will_paginate @categories
        


