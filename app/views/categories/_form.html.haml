= form_for @category do |f|
  -if @category.errors.any?
    #error_explanation
      %h2= "#{pluralize(@category.errors.count, "error")} impidieron que se guarde esta categor√≠a:"
      %ul
        - @category.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name, "Nombre"
    = f.text_field :name
  .actions
    = f.submit 'Guardar'
