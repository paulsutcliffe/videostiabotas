#content.container
  .block.width-1020.behavior-table
    %h6.title Listando personajes
    .table-head
      %ul
        %li.nombre Nombre
      .table-body
        - @characters.each do |character| 
          %ul
            %li.nombre= link_to character.name, character
            %li.links
              = link_to 'Editar', edit_character_path(character), :class => 'btn edit'
              = link_to 'Eliminar', character, :confirm => 'Â¿EstÃ¡s seguro?', :method => :delete, :class => 'btn destroy'
    .table-footer
      = link_to 'Nuevo Personaje', new_character_path, :class => 'link'
      = will_paginate @characters
