- title "Videos"

%table
  %tr
    %th Name
    %th Description
    %th Free
  - for video in @videos
    %tr
      %td= video.name
      %td= video.description
      %td= video.free
      %td= link_to 'Show', video
      %td= link_to 'Edit', edit_video_path(video)
      %td= link_to 'Destroy', video, :confirm => 'Are you sure?', :method => :delete

%p= link_to "New Video", new_video_path
