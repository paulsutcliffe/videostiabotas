= form_for (@video, :html => { :multipart => true }) do |f|
  = f.error_messages
  %p
    = f.label :name
    %br
    = f.text_field :name
  %p
    = f.label :description
    %br
    = f.text_area :description
  %p
    = f.label :movie
    %br
    = f.file_field :movie
  %p
    = f.label :free
    %br
    = f.check_box :free
  %p
    = f.submit
